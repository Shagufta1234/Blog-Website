<div class="mb-3 head">
  <label class="form-label">Title</label>
  <input type="text" required name="title" value="<%= article.title %>" placeholder="write title" class="form-control" id="title">
</div>
<div class="mb-3 head">
  <label class="form-label">Description</label>
  <textarea type="text" name="description" class="form-control" placeholder="write description" id="description"><%= article.description %></textarea>
</div>
<div class="mb-3 head">
  <label class="form-label">Markdown</label>
  <textarea required type="text" name="markdown" class="form-control" placeholder="write markdown" id="markdown"><%= article.markdown %></textarea>
</div>
<a href="/" class="btn save">Cancel</a>
<button type="submit" class="btn w-save">Save</button>